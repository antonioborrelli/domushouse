<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_doors"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.domushouse.Doors">

    <TextView
        android:text="Benvenuto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/msg_benvenuto"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:textStyle="normal|bold"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/logo"
        android:id="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="30dp">

            <TextView
                android:text=" "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtvuoto"
                android:layout_below="@+id/porta"
                android:layout_marginTop="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/porta"
                android:layout_marginTop="27dp"
                android:minHeight= "100dp"
                android:minWidth="100dp"
                android:layout_below="@+id/auto"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/lock" />

            <TextView
                android:text="Portone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/portone"
                android:layout_alignLeft="@+id/portone"
                android:layout_alignStart="@+id/portone"
                android:layout_marginLeft="22dp"
                android:layout_marginStart="26dp"
                android:id="@+id/textView3"
                android:textStyle="normal|bold" />

            <TextView
                android:text="Porta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/porta"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView5"
                android:textStyle="normal|bold" />

            <TextView
                android:text="Auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_marginRight="67dp"
                android:textStyle="normal|bold"
                android:layout_below="@+id/auto"
                android:layout_toLeftOf="@+id/portone"
                android:layout_toStartOf="@+id/portone" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight= "100dp"
                android:minWidth="100dp"
                android:id="@+id/auto"
                android:background="@mipmap/lock"
                android:layout_alignBaseline="@+id/portone"
                android:layout_alignBottom="@+id/portone"
                android:layout_toLeftOf="@+id/textView5"
                android:layout_toStartOf="@+id/textView5" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/portone"
                android:minHeight= "100dp"
                android:minWidth="100dp"
                android:background="@mipmap/lock"
                android:layout_marginTop="78dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textView5"
                android:layout_toEndOf="@+id/textView5" />

        </RelativeLayout>
    </ScrollView>



</RelativeLayout>
