<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lights"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.domushouse.Lights">

    <TextView
        android:text="Benvenuto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/msg_benvenuto"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:textStyle="normal|bold"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/logo"
        android:id="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="30dp">


            <TextView
                android:text=" "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtvuoto"
                android:layout_below="@+id/bagno"
                android:layout_marginTop="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ingresso"
                android:minHeight= "100dp"
                android:minWidth="100dp"
                android:layout_marginTop="27dp"
                android:background="@mipmap/luxoff"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/txtvuoto"
                android:layout_toEndOf="@+id/txtvuoto"
                android:layout_marginLeft="28dp"
                android:layout_marginStart="28dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cucina"
                android:minHeight= "100dp"
                android:minWidth="100dp"
                android:layout_alignBaseline="@+id/ingresso"
                android:layout_alignBottom="@+id/ingresso"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="37dp"
                android:layout_marginEnd="37dp"
                android:background="@mipmap/luxoff" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/letto"
                android:layout_marginTop="62dp"
                android:minHeight= "100dp"
                android:minWidth="100dp"
                android:layout_below="@+id/ingresso"
                android:layout_alignLeft="@+id/ingresso"
                android:layout_alignStart="@+id/ingresso"
                android:background="@mipmap/luxoff" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bagno"
                android:minHeight= "100dp"
                android:minWidth="100dp"
                android:layout_alignBaseline="@+id/letto"
                android:layout_alignBottom="@+id/letto"
                android:layout_alignLeft="@+id/cucina"
                android:layout_alignStart="@+id/cucina"
                android:background="@mipmap/luxoff" />

            <TextView
                android:text="Ingresso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_ingresso"
                android:layout_below="@+id/ingresso"
                android:layout_alignRight="@+id/ingresso"
                android:layout_alignEnd="@+id/ingresso"
                android:layout_marginRight="22dp"
                android:layout_marginEnd="22dp"
                android:textStyle="normal|bold" />

            <TextView
                android:text="Cucina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cucina"
                android:layout_alignRight="@+id/cucina"
                android:layout_alignEnd="@+id/cucina"
                android:layout_marginRight="22dp"
                android:layout_marginEnd="26dp"
                android:id="@+id/text_cucina"
                android:textStyle="normal|bold" />

            <TextView
                android:text="Letto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/letto"
                android:layout_alignRight="@+id/text_ingresso"
                android:layout_alignEnd="@+id/text_ingresso"
                android:layout_marginRight="22dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/text_letto"
                android:textStyle="normal|bold" />

            <TextView
                android:text="Bagno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_bagno"
                android:layout_marginRight="22dp"
                android:layout_marginEnd="26dp"
                android:layout_below="@+id/bagno"
                android:layout_alignRight="@+id/bagno"
                android:layout_alignEnd="@+id/bagno"
                android:textStyle="normal|bold" />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
